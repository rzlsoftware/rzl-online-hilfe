{
	"image": "mcr.microsoft.com/devcontainers/python:3",
	"features": {
		"ghcr.io/devcontainers-extra/features/mkdocs:2": {
			"plugins": ""
		}
	},
	"postCreateCommand": "bash .devcontainer/setup.sh",
	"customizations": {
		"vscode": {
			"extensions": [
				"yzhang.markdown-all-in-one"
			],
			"settings": {
				"[markdown]": {
					"editor.formatOnSave": true
				}
			}
		}
	}
}
