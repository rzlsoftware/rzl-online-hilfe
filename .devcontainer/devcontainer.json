{
	"image": "mcr.microsoft.com/devcontainers/python:3",
	"postCreateCommand": "bash .devcontainer/setup.sh",
	"customizations": {
		"vscode": {
			"extensions": [
        "editorconfig.editorconfig",
				"yzhang.markdown-all-in-one"
			],
			"settings": {
				"[markdown]": {
					"editor.formatOnSave": true
				}
			}
		}
	}
}
